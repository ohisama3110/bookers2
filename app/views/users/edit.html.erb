<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h4>Name</h4>
  <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "Name" %>

  <h4>Image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <h4>Introduction</h4>
  <%= f.text_field :introduction, autofocus: true, id: "user_introduction", placeholder: "introduction" %>

  <%= f.submit "Update User" %>
<% end %>